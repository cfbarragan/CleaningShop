<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%=title%></title>

        <!-- bower:js -->
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="/lib/jquery.sticky/jquery.sticky.js"></script>
        <!-- endbower -->   
    <!-- inject:css -->
    <link rel="stylesheet" href="/css/animate.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/responsive.css">
  
    <link rel="stylesheet" href="/css/simple-sidebar.css">
    <!-- endinject -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Admin Panel
                    </a>
                </li>
                <% for(var i=0; i<nav.length; i++){%>
                    <li>
                    <a href="<%=nav[i].Link%>"><%=nav[i].Text%></a></li>
                <%}%>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <h2><%=title%></h2>
                    <br/>
                    <form action="/admin/product/edit" method="post" class="form-horizontal" accept-charset="utf-8">
                        <div class="form-group ">
                            <input name="productId" id="productId" value="<%=product.id%>" hidden>
                            <label class="col-sm-3 col-lg-1 control-label">Producto</label>
                            <div class="input-group col-sm-9 col-lg-4">
                                <input class="form-control disabled" placeholder="Ingrese nombre de producto" disabled type="text" value="<%=product.productName%>" maxlength="50">
                            </div>
                        </div>
                        <div class="form-group "> 
                            <label class="col-sm-3 col-lg-1 control-label">Precio</label>
                            <div class="input-group col-sm-3 col-lg-1">
                                <span class="input-group-addon">$</span>
                                <input id="productPrice" class="form-control" name="productPrice" placeholder="Ingrese precio" type="number" step="any" required value="<%=product.productPrice%>" maxlength="50">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-1 " >
                                <button class="btn btn-default btn-success b10" type="submit" id="form-button-save">Actualizar</button>
                                <a class="btn btn-default cancel-button b10" href="/admin/adminPrecios" value="reset" id="cancel-button">Cancelar </a>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
        <!-- /#page-content-wrapper -->
        
    </div>
    <!-- /#wrapper -->
    
</body>
<script>

</script>
</html>
