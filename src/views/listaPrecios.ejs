        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="text-center">Estos son nuestros Precios</h3>
                </div>
            </div>
            <hr>
            <div class="row">
            <% if (products.length == 0) {%>
                <div class="col-lg-10 col-lg-offset-1 text-center">
                <div class="alert alert-info" role="alert"><h4>Por el momento no hay precios cargados</h4></div>
                </div>
            <% } else { %>
                <div class="col-lg-10 col-lg-offset-1">
                <div class="panel panel-default">
                     <div class="panel-heading">Filtrar por: 
                        <% for(var i=0; i<categorias.length; i++){%>
                            <a href="/precios/<%=categorias[i]%>"><%=categorias[i]%></a> | 
                         <%}%>
                         <a href="/precios">Todos</a> 
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th><h4>Producto</h4></th> 
                                <th ><h4 class="pull-right">Precio</h4></th> 
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<products.length; i++){%>
                            <tr>
                                <td><%=products[i].productName%></td>    
                                <td><div  class="pull-right"><strong><span>$ </span><%=products[i].productPrice%><strong></div></td> 
                            </tr>
                            <%}%> 
                        </tbody>
                    </table>
                </div>
                </div>
            <%}%> 
            </div> 
            <hr>
